@{
    ViewData["Title"] = "Tabla de Multiplicar";
}

<h2>Tabla de multiplicar del 1 al 10</h2>

<table border="1" cellpadding="5" cellspacing="0">
    <thead>
        <tr>
            <th>x</th>
            @for (int i = 1; i <= 12; i++)
            {
                <th>@i</th>
            }
        </tr>
    </thead>
    <tbody>
        @for (int fila = 1; fila <= 10; fila++)
        {
            <tr>
                <td><strong>@fila</strong></td>
                @for (int col = 1; col <= 12; col++)
                {
                    <td>@fila * @col = @(fila* col)</td>
                }
            </tr>
        }
    </tbody>
</table>
